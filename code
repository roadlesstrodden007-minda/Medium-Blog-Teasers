    <script>
        // Your actual Medium articles
        const blogData = [
            {
                title: "FileFix Attack Leverages Steganography to Deploy StealC Malware",
                excerpt: "The attack impersonates Facebook security warnings to trick users into executing malicious PowerShell commands through Windows File Explorer, ultimately deploying the StealC information stealer.",
                date: "2025-09-16",
                tags: ["cryptography", "threat-intelligence"],
                readTime: "4 min read",
                url: "https://medium.com/roadlesstrodden/filefix-attack-leverages-steganography-to-deploy-stealc-malware-f61195726961"
            },
            {
                title: "The Perfect Storm: AI Cyberattacks Surge as Automated Threats Overwhelm Defenses",
                excerpt: "Threat actors are leveraging AI to create synthetic identities, fabricate convincing content, and scale social engineering campaigns that bypass traditional defenses with alarming effectiveness.",
                date: "2025-09-01",
                tags: ["threat-intelligence", "ai-attack"],
                readTime: "2 min read",
                url: "https://medium.com/@roadlesstrodden-Little-Star/the-perfect-storm-ai-cyberattacks-surge-as-automated-threats-overwhelm-defenses-482cbd8393a5"
            },
            {
                title: "Cyber criminals Weaponize AI to Launch Sophisticated Salesforce Breaches",
                excerpt: "A sophisticated multi-month campaign has compromised hundreds of Salesforce customer environments through stolen OAuth tokens and third-party application abuse.",
                date: "2025-09-01",
                tags: ["threat-intelligence", "ai-attack"],
                readTime: "2 min read",
                url: "https://medium.com/@roadlesstrodden-Little-Star/cyber-criminals-weaponize-ai-to-launch-sophisticated-salesforce-breaches-0f7f88e79cb1"
            },
            {
                title: "Blue Locker Ransomware: Analysis of Pakistan's Critical Infrastructure Attack",
                excerpt: "On August 6, 2025, just days before Pakistan's Independence Day celebrations, the Blue Locker ransomware successfully infiltrated Pakistan Petroleum Limited (PPL), the nation's second-largest oil company.",
                date: "2025-08-31",
                tags: ["threat-intelligence", "critical-infrastructure"],
                readTime: "6 min read",
                url: "https://medium.com/@roadlesstrodden-Little-Star/blue-locker-ransomware-analysis-of-pakistans-critical-infrastructure-attack-b44f70cf36c2"
            },
            {
                title: "My Accidental Journey into Cryptography: How I Invented My Own Cipher Without Knowing It",
                excerpt: "I had a problem that many teenagers face: I wanted to write down my personal thoughts and feelings, but I also wanted to keep them completely private. Hiding a diary felt risky — hidden things have a way of being found. Keeping everything in my head wasn’t working either; I needed the clarity that comes from putting thoughts into words on paper.",
                date: "2025-08-18",
                tags: ["other", "cryptography"],
                readTime: "3 min read",
                url: "https://medium.com/roadlesstrodden/my-accidental-journey-into-cryptography-how-i-invented-my-own-cipher-without-knowing-it-69ded1b34715"
            }
        ];

        // Configuration object
        const config = {
            mediumProfile: "https://medium.com/@roadlesstrodden-Little-Star",
            github: "https://github.com/roadlesstrodden007-minda",
            discord: "https://discord.gg/EGcjn23XFt"
        };

        let currentFilter = 'all';
        let currentSearch = '';

        // Fix for date timezone issues
        function formatDate(dateString) {
            // Handle both formats: "YYYY-MM-DD" and "Month DD, YYYY"
            if (dateString.includes('-')) {
                const [year, month, day] = dateString.split('-');
                const date = new Date(year, month - 1, day); // month is 0-indexed
                return date.toLocaleDateString('en-US', { 
                    year: 'numeric', 
                    month: 'long', 
                    day: 'numeric' 
                });
            } else {
                // Already in readable format
                return dateString;
            }
        }

        function renderBlogs(blogs) {
            const blogGrid = document.getElementById('blogGrid');
            const noResults = document.getElementById('noResults');
            
            if (blogs.length === 0) {
                blogGrid.style.display = 'none';
                noResults.style.display = 'block';
                return;
            }
            
            blogGrid.style.display = 'grid';
            noResults.style.display = 'none';
            
            blogGrid.innerHTML = blogs.map(blog => `
                <div class="blog-card">
                    <div class="blog-meta">
                        <span class="blog-date">${formatDate(blog.date)}</span>
                        <span>${blog.readTime}</span>
                    </div>
                    <h3>${blog.title}</h3>
                    <p>${blog.excerpt}</p>
                    <div class="blog-tags">
                        ${blog.tags.map(tag => `<span class="blog-tag">${tag}</span>`).join('')}
                    </div>
                    <a href="${blog.url}" target="_blank" class="read-more">Read on Medium</a>
                </div>
            `).join('');
        }

        function filterBlogs() {
            let filteredBlogs = blogData;
            
            // Apply tag filter
            if (currentFilter !== 'all') {
                filteredBlogs = filteredBlogs.filter(blog => 
                    blog.tags.some(tag => tag.toLowerCase().includes(currentFilter.toLowerCase()))
                );
            }
            
            // Apply search filter
            if (currentSearch) {
                filteredBlogs = filteredBlogs.filter(blog => 
                    blog.title.toLowerCase().includes(currentSearch.toLowerCase()) ||
                    blog.excerpt.toLowerCase().includes(currentSearch.toLowerCase()) ||
                    blog.tags.some(tag => tag.toLowerCase().includes(currentSearch.toLowerCase()))
                );
            }
            
            renderBlogs(filteredBlogs);
        }

        // Initialize the page
        function init() {
            // Set up social links
            document.getElementById('mediumProfile').href = config.mediumProfile;
            document.getElementById('githubLink').href = config.github;
            document.getElementById('discordLink').href = config.discord;

            // Render initial blogs
            renderBlogs(blogData);

            // Set up event listeners
            document.getElementById('searchInput').addEventListener('input', (e) => {
                currentSearch = e.target.value;
                filterBlogs();
            });

            document.querySelectorAll('.filter-tag').forEach(tag => {
                tag.addEventListener('click', (e) => {
                    document.querySelectorAll('.filter-tag').forEach(t => t.classList.remove('active'));
                    e.target.classList.add('active');
                    currentFilter = e.target.dataset.tag;
                    filterBlogs();
                });
            });
        }

        // Start the application
        document.addEventListener('DOMContentLoaded', init);
    </script>
</body>
</html>
